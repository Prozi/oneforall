{
  "name": "@jacekpietal/oneforall",
  "description": "set of classes to better organize 2d game development",
  "version": "1.2.0",
  "main": "./dist/index.js",
  "license": "MIT",
  "devDependencies": {
    "@jacekpietal/bouncer.js": "^2.26.0",
    "@types/jest": "^27.0.0",
    "cross-env": "^7.0.3",
    "esm": "^3.2.25",
    "jest": "^27.0.6",
    "pixi-shim": "^2.3.2",
    "pixi.js-legacy": "^6.1.1",
    "prettier": "^2.3.2",
    "prettier-config-standard": "^4.0.0",
    "rxjs": "^7.3.0",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve",
    "test": "jest --verbose --silent",
    "test-build": "yarn build && node -r esm ./test-build.js",
    "test-docs": "webpack && node node_modules/@jacekpietal/bouncer.js/bin docs",
    "format": "prettier ./src/*.ts --write",
    "format-docs": "prettier ./docs/*.ts --write",
    "build": "tsc",
    "precommit": "yarn format && yarn format-docs && yarn test-build && yarn test && yarn test-docs"
  },
  "keywords": [
    "gameobject",
    "prefab",
    "state",
    "machine",
    "sprite",
    "circle",
    "body",
    "polygon",
    "physics",
    "container",
    "scene",
    "animator",
    "webgl",
    "pixi.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Prozi/oneforall.git"
  },
  "dependencies": {
    "@jacekpietal/dependency-injection": "^1.4.0",
    "detect-collisions": "^2.5.6",
    "latermom": "^1.0.4",
    "pixi.js": "^6.1.1"
  }
}
