{
  "name": "@jacekpietal/oneforall",
  "description": "set of classes to better organize 2d game development",
  "version": "1.10.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@jacekpietal/bouncer.js": "^3.4.0",
    "@types/jest": "^27.4.0",
    "@types/offscreencanvas": "^2019.6.4",
    "@types/rbush": "^3.0.0",
    "cross-env": "^7.0.3",
    "esm": "^3.2.25",
    "jest": "^27.5.1",
    "pixi-shim": "^2.3.19",
    "pixi.js-legacy": "^6.2.2",
    "prettier": "^2.5.1",
    "prettier-config-standard": "^4.0.0",
    "rxjs": "^7.5.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve",
    "test": "jest --verbose --silent",
    "test-build": "yarn build && node -r esm ./test-build.js",
    "test-docs": "webpack && cp dist/demo/demo.bundle.js docs && bouncer.js docs",
    "format": "prettier ./src/*.ts --write",
    "format-docs": "prettier ./docs/*.ts --write",
    "build": "tsc",
    "precommit": "yarn format && yarn format-docs && yarn test-build && yarn test && yarn test-docs"
  },
  "keywords": [
    "gameobject",
    "prefab",
    "state",
    "machine",
    "sprite",
    "circle",
    "body",
    "polygon",
    "physics",
    "container",
    "scene",
    "animator",
    "webgl",
    "pixi.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Prozi/oneforall.git"
  },
  "dependencies": {
    "@jacekpietal/dependency-injection": "^1.4.0",
    "detect-collisions": "^3.2.1",
    "latermom": "^1.0.4",
    "pixi.js": "^6.2.2",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.6.0"
  }
}
